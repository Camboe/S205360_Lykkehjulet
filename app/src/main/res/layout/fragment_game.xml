<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameFrag"
    android:background="@color/blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="GÆT ORDET"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="300dp"
            android:text="Point: 0"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Point: 0" />


        <ImageView
            android:id="@+id/lykkehjul"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="110dp"
            android:adjustViewBounds="true"
            android:src="@drawable/lykkehjul1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.813"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/spinArrow"
            android:layout_width="80dp"
            android:layout_height="95dp"
            android:layout_marginBottom="244dp"
            android:adjustViewBounds="true"
            android:onClick="SpinWheel"
            android:src="@drawable/spinarrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/kobVokal"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginStart="45dp"
            android:backgroundTint="@color/orange"
            android:text="Køb Vokal"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lykkehjul" />

        <Button
            android:id="@+id/getOrd"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginEnd="45dp"
            android:text="Gæt ord"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lykkehjul">
        </Button>


        <EditText
            android:id="@+id/textFieldWord"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point"></EditText>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>